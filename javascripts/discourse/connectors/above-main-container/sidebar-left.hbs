<ul
  class={{concatClass
    "sidebar-left__messages-menu"
    (unless this.isActive "hidden")
  }}
  style={{concatStyle}}
>
  <li>
    <a href={{concat "/u/" currentUser.username "/messages"}}>
      {{d-icon "m-inbox"}}
      <span>Go to inbox</span>
    </a>
  </li>
  <li>
    <a href="/new-message">
      {{d-icon "m-post_add"}}
      <span>New message</span>
    </a>
  </li>
  <li>
    <a href {{on "click" this.toggleMoveToHeader}}>
      {{d-icon "m-arrow_outward"}}
      <span>Move to header</span>
    </a>
  </li>
</ul>

<nav class="sidebar-left">
  {{!-- <div class="sidebar-left__section">
    {{sidebar-left-user}}
  </div> --}}

  <div class="sidebar-left__section">
    <ul class="sidebar-left__links">
      <li class="sidebar-left__link">
        <a href="/">
          {{d-icon "home"}}
          <span class="sidebar-left__label">
            Home
          </span>
        </a>
      </li>

      {{#if currentUser}}

        <li
          class={{concatClass
            "sidebar-left__link sidebar-left__messages"
            (if this.isMovedToHeader "hidden")
          }}
        >
          <a href={{concat "/u/" currentUser.username "/messages"}}>
            {{d-icon "m-email"}}
            <span class="sidebar-left__label">
              Messages
              {{#unless
                (eq currentUser.new_personal_messages_notifications_count 0)
              }}
                <span class="badge-notification">
                  {{currentUser.new_personal_messages_notifications_count}}
                </span>
              {{/unless}}
            </span>

            <DButton
              @action={{this.toggleMenu}}
              @icon="ellipsis-h"
              class={{concatClass
                "sidebar-left__messages-more"
                (if this.isActive "active")
              }}
            />
          </a>
        </li>
        <li class="sidebar-left__link">
          <a href="/unread">
            {{d-icon "m-feed"}}
            <span class="sidebar-left__label">
              Following Topics
            </span>
          </a>
        </li>

        {{#if currentUser.can_review}}
          <li class="sidebar-left__link">
            <a href="/review">
              {{d-icon "flag"}}
              <span class="sidebar-left__label">
                Review
                {{#unless (eq currentUser.reviewable_count 0)}}
                  <span class="badge-notification">
                    {{currentUser.reviewable_count}}
                  </span>
                {{/unless}}
              </span>
            </a>
          </li>
        {{/if}}

        {{#if currentUser.admin}}
          <li class="sidebar-left__link">
            <a href="/admin">
              {{d-icon "wrench"}}
              <span class="sidebar-left__label">
                Admin
              </span>
            </a>
          </li>
        {{/if}}

        <li class="sidebar-left__link">
          <a href="/new-topic" class="sidebar-left__new">
            {{d-icon "m-add_box"}}
            <span class="sidebar-left__label">
              New Topic
            </span>
          </a>
        </li>
      {{/if}}
    </ul>
  </div>

  {{sidebar-left-categories}}

  {{sidebar-left-footer}}
</nav>