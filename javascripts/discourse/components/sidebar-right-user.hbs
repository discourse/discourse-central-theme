{{#if currentUser.username}}
  <div class="user__wrapper has-banner">
    {{#if banner}}
      <div
        class="user__banner"
        style={{html-safe (concat "background-image: url(" banner ")")}}
      >
      </div>
    {{else}}
      <div class="user__banner">
      </div>
    {{/if}}
    <div class="user__wrapper--inner">
      <div class="user__avatar">
        {{#if currentUser.animated_avatar}}
          {{bound-avatar-template currentUser.animated_avatar "huge"}}
        {{else}}
          {{bound-avatar-template currentUser.avatar_template "huge"}}
        {{/if}}
      </div>
      <h3 class="user__name">
        {{#if currentUser.name}}
          {{currentUser.name}}
        {{else}}
          {{currentUser.username}}
        {{/if}}
      </h3>

      {{#if currentUser.name}}
        <div class="user__handle username">
          <a href={{concat "/u/" currentUser.username}}>
            {{currentUser.username}}
          </a>
        </div>
      {{/if}}
      <p class="user__bio">
        {{html-safe bio}}
      </p>
      <span class="user__link">
        {{d-icon "globe"}}
        <a href={{website}}>
          {{website_name}}
        </a>
      </span>
      {{! <p class="user__status">
      {{currentUser.status.emoji.src
      {{currentUser.status.description
    </p> }}
      <div class="user__edit">
        <DButton
          @translatedLabel="Edit Profile"
          @href="/u/{{this.currentUser.username}}/preferences/profile"
        />
      </div>
    </div>
  </div>
{{else}}
  <div class="user__wrapper">
    <div class="user__view">
      <button class="btn" type="button">
        Login
      </button>
    </div>
  </div>
{{/if}}